<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="?android:selectableItemBackground">

    <TextView
        android:id="@+id/list_item_message_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        tools:text="Date/Time" />

    <TextView
        android:id="@+id/list_item_user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_message_date_text_view"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="User Name" />

    <TextView
        android:id="@+id/list_item_user_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_user_name_text_view"
        android:padding="4dp"
        tools:text="Message text" />

</RelativeLayout>