<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/receiving_messages_interval" />

    <SeekBar
        android:id="@+id/seconds_interval_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:max="10"
        android:paddingTop="24dp"
        android:progress="3" />

    <TextView
        android:id="@+id/seconds_interval_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seconds_interval_seek_bar"
        android:layout_centerInParent="true"
        android:text="@string/default_seek_bar_progress_3" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="36dp"
        android:background="@color/colorPrimary"
        android:text="@string/log_out_button_text"
        android:textColor="@color/white" />

</RelativeLayout>